{
  "projectName": "SpeakSphere",
  "version": "1.0.0-poc",
  "description": "AI-powered customer interaction and management platform.",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/speaksphere.git"
  },
  "compliance": {
    "standards": ["GDPR", "CCPA", "HIPAA"],
    "dataEncryption": true,
    "auditLogging": "enabled"
  },
  "modules": {
    "customerInquiries": {
      "enabled": true,
      "entrypoint": "/api/v1/chat"
    },
    "appointmentScheduling": {
      "enabled": true,
      "provider": "GoogleCalendarAPI"
    },
    "inventoryManagement": {
      "enabled": true,
      "dashboardPath": "/dashboard/inventory"
    }
  },
  "supportedLanguages": ["en", "ta", "hi", "es", "fr"],
  "settings": {
    "documentation": "docs/SETTINGS.md",
    "configurableParameters": ["INVENTORY_LOW_STOCK_THRESHOLD"]
  },
  "documentation": {
    "wiki": "docs/WIKI.md",
    "faqs": "docs/FAQS.md",
    "architecture": "docs/ARCHITECTURE.md",
    "api": "docs/API_DOCS.md",
    "contributing": "docs/CONTRIBUTING.md",
    "features": "docs/FEATURES.md",
    "roadmap": "docs/ROADMAP.md",
    "structure": "docs/PROJECT_STRUCTURE.md",
    "database_schema": "./DATABASE_SCHEMA.json"
  }
}
